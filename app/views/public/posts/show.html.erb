<div class="row">


  <div class="col-5">

    <div class="row">
      <div>
        <%= link_to user_path(@post.user.id) do %>
          <%= image_tag @post.user.image, size:'30x30' %>
          <%= @post.user.nickname %>
        <% end %>
      </div>

      <h2><%= @post.title %></h2>
    </div>

    <div class="row">
      <p>
        <%= @post.post_text %>
      </p>
    </div>

  </div>

  <div class="col-7">



  </div>

</div>