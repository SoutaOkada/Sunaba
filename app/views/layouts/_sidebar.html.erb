<div>

  <% if admin_signed_in? %>

    <div>
      <h1>Sunaba</h1>
    </div>

    <div>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    </div>

    <div>
      <%= link_to "ゲーム一覧", admin_games_path %>
    </div>

    <div>
      <%= link_to "ユーザー一覧", admin_users_path %>
    </div>

  <% elsif user_signed_in? %>

    <div>
      <%= link_to root_path do %>
        <h1>Sunaba</h1>
      <% end %>
    </div>

    <div>
      <%= link_to user_path(current_user.id) do %>
        <div><%= image_tag current_user.image, size: '50x50' %></div>
        <div><%= current_user.nickname %></div>
      <% end %>
    </div>

    <div>
      <%= link_to "ゲーム一覧", games_path %>
    </div>

    <div>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </div>

    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([['User'], ['Game']]) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>

  <% else %>

    <div>
      <%= link_to root_path do %>
        <h1>Sunaba</h1>
      <% end %>
    </div>

    <div>
      <%= link_to "ゲーム一覧", games_path %>
    </div>


    <div>
      <%= link_to "新規登録", new_user_registration_path %>

      <%= link_to "ログイン", new_user_session_path %>
    </div>

    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.label :word, "ゲーム検索" %></br>
        <%= f.hidden_field :range, :value => ["ゲーム","game"] %>
        <%= f.text_field :word %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>

  <% end %>

</div>