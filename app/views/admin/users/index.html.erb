<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      <div class="row">
        <h1>ユーザー</h1>
      </div>

      <div class="row">
        <table class="table text-light table-dark table-striped table-sm border border-secondary">
          <tr>
            <th>id</th>
            <th></th>
            <th>ユーザー名</th>
            <th>ニックネーム</th>
            <th>登録日時</th>
            <th>ステータス</th>
          </tr>

          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>

              <td>
                <% if user.image.attached? %>
                  <div><%= image_tag user.image, size: '30x30', class: 'img-thumbnail' %></div>
                <% else %>
                  <div><%= image_tag '20200501_noimage', size: '30x30', class: 'img-thumbnail' %></div>
                <% end %>
              </td>

              <td>
                <%= link_to admin_user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </td>

              <td>
                <%= user.nickname %>
              </td>

              <td>
                <%= user.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              </td>

              <td>
                <% if user.is_active == true %>
                  <%= "有効" %>
                <% else %>
                <%= "退会済み" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</div>