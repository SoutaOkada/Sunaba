<h2>検索結果</h2>

<% if @range == "User" %>
  <table class="table table-hover table-inverse text-light">
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= image_tag user.image, size: '30x30' %>
              <%= user.nickname %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>
            <% if user.is_active == true %>
              <%= "有効" %>
            <% else %>
            <%= "退会済み" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <table class="table table-hover table-inverse text-light">
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td>
            <div>
              <%= game.id %>
            </div>
          </td>
          <td>
            <%= link_to admin_game_path(game.id) do %>
              <%= game.game_title %>
            <% end %>
          </td>
          <td>
            <% if game.is_active == true %>
              <%= "公開中" %>
            <% else %>
              <%= "削除" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
