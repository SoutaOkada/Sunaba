<div class="row">

  <div class="col-5">
    <div class="row">
      <h1>
        <%= @game.game_title %>
      </h1>

      <p>
        <% if @game.users.include?(current_user) %>
          フォロー中
        <% end %>
      </p>

      <div>
        <% if user_signed_in? %>
          <% if @game.users.include?(current_user) %>
            <% @following_game_id = @game.id %>
            <%= form_with model: @follow_game, url: follow_game_path(@game.id), method: :delete do |f| %>
              <%= f.submit "フォロー解除" %>
            <% end %>
          <% else %>
            <%= form_with model: @follow_game, url: follow_games_path do |f| %>
              <%= f.hidden_field :game_id, :value => @game.id %>
              <%= f.hidden_field :user_id, :value => current_user.id %>

              <%= f.submit "フォロー" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <table class="table col-12 text-light">
        <% @game.game_links.each do |game_link| %>
          <tr>
            <td>
              <%= game_link.link_title %>
            </td>

            <td>
              <a href="<%= game_link.link %>">link</a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>


    <% if user_signed_in? %>
      <div class="row">
        <div class="col-12">
          <div class="row">
            <h3>新規投稿</h3>
          </div>

          <div class="row">
            <div class="col-12">
                <%= form_with model: @post, url: posts_path do |f| %>
                  <%= f.hidden_field :game_id, :value => @game.id %>
                  <%= f.hidden_field :user_id, :value => current_user.id %>

                  <%= f.label :title, "タイトル" %><br />
                  <%= f.text_field :title %><br />

                  <%= f.label :post_text, "本文" %><br />
                  <%= f.text_area :post_text %><br />

                  <%= f.submit "投稿" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-7">
    <div>
      <table class="table text-light">

          <tr>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>投稿日時</th>
          </tr>

        <% @posts.each do |one_post| %>
          <% if one_post.user.is_active == true %>
            <tr>
              <td>
                <%= link_to post_path(one_post.id) do %>
                  <%= one_post.title %>
                <% end %>
              </td>
              <td>
                <%= link_to user_path(one_post.user.id) do %>
                  <%= image_tag one_post.user.image, size:'30x30' %>
                  <%= one_post.user.nickname %>
                <% end %>
              </td>
              <td>
                <%= one_post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              </td>
            </tr>
          <% end %>
        <% end %>

      </table>
    </div>

  </div>

</div>