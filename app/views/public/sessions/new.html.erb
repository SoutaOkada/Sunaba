<div class="container-lg">

  <div class="row border-bottom mb-3">
    <h2 class="col-3 d-inline ml-2">ログイン</h2>
    <div class="col-8 text-left">
      <p class="d-inline">
        <%= render "public/shared/links" %>
      </p>
    </div>
  </div>

  <%= form_with model: @user, url: session_path(resource_name) do |f| %>

    <div class="row">
      <div class="col-12">
        <div class="field ml-10 mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-4' %>
        </div>

        <div class="field ml-10 mb-3">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field ml-10 mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions col-5">
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-dark border mx-auto d-block col-3' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  </div>


</div>
