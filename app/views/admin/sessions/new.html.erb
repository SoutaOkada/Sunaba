<div class="container-lg">
  <div class="col-12">

    <div class="row">
      <h2 class="mt-3">管理者ログイン</h2>
    </div>

    <div class="row">
      <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
        <div class="field mb-3">
          <div class="col-12">
            <div class="row">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-10' %>
            </div>
          </div>
        </div>

        <div class="field mb-3">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>

  </div>
</div>