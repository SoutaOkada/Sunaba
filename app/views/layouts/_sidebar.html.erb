<div>

  <% if admin_signed_in? %>

    <div class="row text-center">
      <div class="col-12 link-light">
        <%= image_tag 'logo.png', size: '150x70' %>
      </div>
    </div>

    <div class="row">
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <%= link_to "ゲーム一覧", admin_games_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <%= link_to "ユーザー一覧", admin_users_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <div class="col-12", style='margin:10px 0; width: 100%'>
        <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['User'], ['Game']]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  <% elsif user_signed_in? %>

    <div class="row text-center">
      <div class="col-12 link-light w-auto my-3">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', size: '150x70' %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <%= link_to user_path(current_user.id), style: 'text-align: center; margin: 0 auto' do %>
        <div><%= image_tag current_user.image, size: '80x80', class: 'img-rounded' %></div>
        <div><%= current_user.nickname %></div>
      <% end %>
    </div>

    <div class="row">
      <%= link_to "ゲーム一覧", games_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <div class="col-12", style='margin:10px 0; width: 100%'>
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['User'], ['Game']]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  <% else %>

    <div class="row text-center">
      <div class="col-12 link-light w-auto my-3">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', size: '150x70' %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <%= link_to "ゲーム一覧", games_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>


    <div class="row">
      <%= link_to "新規登録", new_user_registration_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <%= link_to "ログイン", new_user_session_path, class: 'text-white btn btn-dark', style: 'margin:5px 0; width: 100%' %>
    </div>

    <div class="row">
      <div class="col-12", style='margin:10px 0; width: 100%'>
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.label :word, "ゲーム検索" %></br>
          <%= f.hidden_field :range, :value => ["ゲーム","game"] %>
          <%= f.text_field :word %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  <% end %>

</div>