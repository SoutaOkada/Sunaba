<div class="row">


  <div class="col-5">

    <div class="row">
      <div>
        <%= link_to user_path(@post.user.id) do %>
          <%= image_tag @post.user.image, size:'30x30' %>
          <%= @post.user.nickname %>
        <% end %>
      </div>

      <h2><%= @post.title %></h2>
    </div>

    <div class="row">
      <p>
        <%= @post.post_text %>
      </p>
    </div>

    <div class="row">
      <%= form_with model: @comment, url: comments_path do |f| %>
        <%= f.hidden_field :post_id, :value => @post.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>

        <%= f.label :text, "コメント" %>
        <%= f.text_area :text %>

        <%= f.submit "投稿" %>
      <% end %>
    </div>

  </div>

  <div class="col-7">



  </div>

</div>