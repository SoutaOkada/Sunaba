<h2>検索結果</h2>

<% if @range == "User" %>
  <div style="overflow-y: scroll">
    <table class="table text-light table-dark table-striped table-sm border border-secondary">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
                <% if user.image.attached? %>
                <div><%= image_tag user.image, size: '30x30', class: 'img-thumbnail' %></div>
              <% else %>
                <div><%= image_tag '20200501_noimage', size: '30x30', class: 'img-thumbnail' %></div>
              <% end %>
                <%= user.nickname %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div style="overflow-y: scroll">
    <table class="table text-light table-dark table-striped table-sm border border-secondary">
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td>
              <%= link_to game_path(game.id) do %>
                <%= game.game_title %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
