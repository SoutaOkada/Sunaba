<div>

  <div>
    <h1>ユーザー</h1>
  </div>

  <div>
    <table class="table col-6 text-light">
      <tr>
        <th>id</th>
        <th></th>
        <th>ユーザー名</th>
        <th>ニックネーム</th>
        <th>ステータス</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>

          <td><%= image_tag user.image, size: '40x40' %></td>

          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>

          <td>
            <%= user.nickname %>
          </td>

          <td>
            <% if user.is_active == true %>
              <%= "有効" %>
            <% else %>
            <%= "退会済み" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>

  </div>

</div>