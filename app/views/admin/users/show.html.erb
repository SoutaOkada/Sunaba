<div>

  <div>
    <h1><%= @user.name %></h1>
  </div>

  <div>

    <table class="table col-4 text-light">

      <tr>
        <td>メールアドレス</td>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <td>生年月日</td>
        <td><%= @user.birth_date %></td>
      </tr>

      <tr>
        <td>性別</td>
        <td><%= @user.gender_i18n %></td>
      </tr>

      <tr>
        <td>性別の公開</td>
        <td>
          <% if @user.open_gender == false %>
            <%= "非公開" %>
          <% else %>
            <%= "公開" %>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>ニックネーム</td>
        <td><%= @user.nickname %></td>
      </tr>

      <tr>
        <td>自己紹介</td>
        <td><%= @user.self_intro %></td>
      </tr>

      <tr>
        <td>ステータス</td>
        <td>
          <% if @user.is_active == true %>
          <%= "有効" %>
          <% else %>
          <%= "退会済み" %>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>登録日時</td>
        <td><%= @user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>

    </table>

  </div>

  <div>
    <div>
      <h3>ステータス更新</h3>
    </div>

    <div>
      <%= form_with model: @user, url: admin_user_path(params[:id]), method: :patch do |f| %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>

        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会" %>

        <%= f.submit "更新" %>
      <% end %>
    </div>
  </div>

</div>